<odoo>
    <record id="estate_property_offers_view_list" model="ir.ui.view">
        <field name="name">estate_property_offers_list</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <list string="Estate Property Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="estate_property_offers_view_form" model="ir.ui.view">
        <field name="name">estate_property_offers_form</field>
        <field name="model">estate.property.offers</field>
        <field name="arch" type="xml">
            <list string="Estate Property Offer">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
            </list>
        </field>
    </record>

</odoo>